{
  "name": "upgradelabs/ifthenpay",
  "description": "Laravel package for Ifthenpay API integration (Multibanco, MBWay, Credit Card, Google Pay, Apple Pay, Refunds)",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Upgradelabs",
      "email": "support@upgradelabs.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/support": "^11.0|^12.0",
    "illuminate/http": "^11.0|^12.0"
  },
  "version": "2.0.0",
  "autoload": {
    "psr-4": {
      "Upgradelabs\\Ifthenpay\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Upgradelabs\\Ifthenpay\\IfthenpayServiceProvider"
      ],
      "aliases": {
        "Ifthenpay": "Upgradelabs\\Ifthenpay\\Facades\\Ifthenpay"
      }
    }
  },
  "require-dev": {
    "orchestra/testbench": "^11.0",
    "phpunit/phpunit": "^9.0"
  }
}
